<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="homework2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <!-- Data explore -->
            <Button x:Name="DataExplore"
                    Text="Go check existing data!"
                    Clicked="GoToDataExploreClicked"/>

            <!-- Create test data -->
            <Button x:Name="TestData"
                    Text="Create test data!"
                    Clicked="CreateTestDataClicked"/>        

            <!-- Import data -->
            <Button x:Name="ImportData"
                    Text="Import data from the file!"
                    Clicked="ImportDataClicked"/>    


            <!-- Save data -->
            <Button x:Name="SaveData"
                    Text="Save!"
                    Clicked="SaveDataClicked"/>    

             <!-- Create Order -->
            <Button x:Name="CreateOrder"
                    Text="Create Order"
                    Clicked="CreateOrderClicked"/>          

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
